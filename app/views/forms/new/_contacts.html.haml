%div.inst-box
  %header
    %strong
      Contacts
  %fieldset#contact
    = "Name*:"
    = text_field_tag "names[]", "", maxlength: 20, class: "span2", id: "names_new_contact"
    %br
    = "Title*:"
    = text_field_tag "titles[]", "", maxlength: 20, class: "span2", id: "titles_new_contact"
    %br
    = "Email:"
    = text_field_tag "contact_emails[]", "", maxlength: 50, class: "span3", id: "emails_new_contact"
    %br
    = "Phone:"
    = text_field_tag "contact_phones[]", "", maxlength: 12, class: "span2", id: "phones_new_contact"
    %br
    = "Phone Extension:"
    = text_field_tag "contact_phone_extensions[]", "", maxlength: 12, class: "span2", id: "extension_new_contact"
    %br
    = "Fax:"
    = text_field_tag "contact_faxes[]", "", maxlength: 50, class: "span2", id: "fax_new_contact"
    %br
    = link_to "Delete this contact permanently", '#', class: "btn btn-danger"

  - fields = render "forms/single_contact"
  %p
    = link_to_function "Add a new contact", ("add_fields(6, this, \"#{escape_javascript(fields)}\")"), class: "btn btn-primary"
